{
  "name": "Star Citizen - Better Spectrum Dark Theme",
  "short_name": "SpectrumDark",
  "description": "This extension changes the appearance of Spectrum and some RSI web pages. You must have the dark mode enabled.",
  "version": "1.1.4",
  "author": "Rene Jansen",
  "icons": {
    "128": "icons/icon_128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "48": "icons/icon_48-fill.png",
      "128": "icons/icon_128-fill.png"
    },
    "default_popup": "ui_resources/SpectrumDark.Settings.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://robertsspaceindustries.com/*", "https://www.robertsspaceindustries.com/*"
      ],
      "js": [
        "content_scripts/loader.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://robertsspaceindustries.com/*", "https://www.robertsspaceindustries.com/*"
      ],
      "resources": [
        "web_resources/SpectrumDark.css",
        "web_resources/fuse.js",
        "web_resources/shims.chrome.storage.js",
        "debug/*.html"
      ]
    }
  ]
}
